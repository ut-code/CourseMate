{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "rules": {
      "nursery": {
        "useSortedClasses": "warn"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignore": [
      "bun.lockb",
      "server/target",
      "data.json",
      "server/src/seeds/json",
      "scraper/target",
      ".next",
      "next-env.d.ts",
      "out",
      "package-lock.json"
    ]
  }
}
