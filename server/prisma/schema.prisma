//schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  guid        String        @unique
  name        String        @default("名無し")
  email       String        @default("")
  password    String        @default("")
  pictureUrl  String        @default("")
  enrollments Enrollement[]

  //自分がマッチリクエストしている相手
  sendingUsers Relationship[] @relation("sending")

  //自分をマッチリクエストしている相手
  receivingUsers Relationship[] @relation("receiving")
}

model Course {
  id          Int           @id @default(autoincrement())
  name        String
  enrollments Enrollement[]
}

model Enrollement {
  id       Int    @id @default(autoincrement())
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
  course   Course @relation(fields: [courseId], references: [id])
  courseId Int
}

model Relationship {
  id               Int            @id @default(autoincrement())
  status           MatchingStatus
  sendingUser   User           @relation("sending", fields: [sendingUserId], references: [id])
  sendingUserId Int //マッチリクエストを送っている人
  receivingUser    User           @relation("receiving", fields: [receivingUserId], references: [id])
  receivingUserId  Int //マッチリクエストを送られている人

  @@unique([sendingUserId, receivingUserId])
}

enum MatchingStatus {
  PENDING
  MATCHED
  REJECTED
}
